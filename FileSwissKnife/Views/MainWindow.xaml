<Window x:Class="FileSwissKnife.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:FileSwissKnife.ViewModels"
        mc:Ignorable="d"
        Title="File Swiss Knife" Height="350" Width="500" AllowDrop="True" d:DataContext="{d:DesignInstance viewModels:MainWindowViewModel}">
    <Window.Resources>
    </Window.Resources>
    <Grid Margin="5">
        <TabControl SelectedValue="{Binding Path=SelectedTab}"
                    ItemsSource="{Binding Path=Tabs}"
                    ContentTemplateSelector="{StaticResource TabDataTemplateSelector}">
            <TabControl.ItemContainerStyle>
                <Style TargetType="TabItem">
                    <Setter Property="Header" Value="{Binding DisplayName}"/>
                </Style>
            </TabControl.ItemContainerStyle>
        </TabControl>
    </Grid>
</Window>
