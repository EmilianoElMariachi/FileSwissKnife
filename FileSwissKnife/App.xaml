<Application x:Class="FileSwissKnife.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/MainWindow.xaml">

    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styling/SimpleStyles.xaml" />
                <ResourceDictionary Source="Styling/TabItem.xaml" />
                <ResourceDictionary Source="Styling/ComboBox.xaml" />
                <ResourceDictionary Source="Styling/ProgressBar.xaml" />
                <ResourceDictionary Source="Styling/Icons.xaml" />
                <ResourceDictionary Source="Styling/Button.xaml" />
                <ResourceDictionary Source="Themes/Dark.xaml" />
                <ResourceDictionary Source="Themes/Light.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>
</Application>
