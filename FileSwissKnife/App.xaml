<Application x:Class="FileSwissKnife.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:FileSwissKnife.Views"
             StartupUri="Views/MainWindow.xaml">

    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate x:Key="HashView">
                <views:HashView />
            </DataTemplate>

            <DataTemplate x:Key="SplitView">
                <views:SplitView></views:SplitView>
            </DataTemplate>

            <DataTemplate x:Key="JoinView">
                <views:JoinView></views:JoinView>
            </DataTemplate>

            <views:TabDataTemplateSelector x:Key="TabDataTemplateSelector" 
                                           HashViewDataTemplate="{StaticResource HashView}" 
                                           SplitViewDataTemplate="{StaticResource SplitView}" 
                                           JoinViewDataTemplate="{StaticResource JoinView}" 
            />

        </ResourceDictionary>

    </Application.Resources>
</Application>
