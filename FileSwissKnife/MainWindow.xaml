<Window x:Class="FileSwissKnife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:customControls="clr-namespace:FileSwissKnife.CustomControls"
        xmlns:loc="clr-namespace:FileSwissKnife.Localization"
        xmlns:fileSwissKnife="clr-namespace:FileSwissKnife"
        mc:Ignorable="d"
        Title="File Swiss Knife" Height="350" Width="500" AllowDrop="True" d:DataContext="{d:DesignInstance fileSwissKnife:MainWindowViewModel}">
    <Window.Resources>
    </Window.Resources>
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TabControl SelectedIndex="{Binding Path=SelectedModeIndex}">
            <TabItem Header="{Binding Source={x:Static loc:Localizer.Instance}, Path=TabNameJoin}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="{Binding Source={x:Static loc:Localizer.Instance}, Path=JoinInputFiles}" Style="{StaticResource Title}"/>
                        <customControls:TextBoxExt x:Name="TextBoxFilesToJoin"
                                                   Style="{StaticResource TextBoxDragWatermark}" 
                                                   Text="{Binding Path=FilesToJoin, UpdateSourceTrigger=PropertyChanged}"
                                                   Grid.Row="1" 
                                                   AllowDrop="True" 
                                                   PreviewDragOver="FilesToJoin_OnPreviewDragOver" 
                                                   HorizontalScrollBarVisibility="Auto"
                                                   VerticalScrollBarVisibility="Auto" 
                                                   AcceptsReturn="True"
                                                   WatermarkText="{Binding Source={x:Static loc:Localizer.Instance}, Path=DragMeSomeFilesToJoin }"
                                                   Drop="TextBoxFilesToJoin_OnDrop"/>
                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />

                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="{Binding Source={x:Static loc:Localizer.Instance}, Path=JoinOutputFile}" Style="{StaticResource Title}"/>
                        <TextBox x:Name="JoinOutputFilePath" Grid.Row="1" Text="{Binding Path=JoinOutputFile, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>

                </Grid>
            </TabItem>
            <TabItem Header="{Binding Source={x:Static loc:Localizer.Instance}, Path=TabNameSplit}">

            </TabItem>
            <TabItem Header="{Binding Source={x:Static loc:Localizer.Instance}, Path=TabNameHash}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Input files:" />
                        <TextBox x:Name="FilesToHash" Grid.Row="1" AllowDrop="True" PreviewDragOver="FilesToJoin_OnPreviewDragOver" />
                    </Grid>

                </Grid>
            </TabItem>
        </TabControl>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"  />
                <ColumnDefinition Width="5"  />
                <ColumnDefinition />
                <ColumnDefinition Width="5"  />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button Command="{Binding Path=RunCommand}" HorizontalAlignment="Center" Grid.Column="0" MinWidth="60" Height="30" Content="{Binding Path=StartActionButtonText, FallbackValue=Go!}" />
            <customControls:ProgressBarExt  Grid.Column="2" Minimum="0" Maximum="100.0" Height="30" Value="{Binding Path=ProgressBarValue}" Text="{Binding Path=ProgressBarText}" />
            <Image Grid.Column="4" Source="./UIResources/Error_256x256.png" Height="26" Visibility="{Binding Path=ErrorIconVisibility}" ToolTip="{Binding Path=ErrorMessage}">
                <Image.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="{Binding Source={x:Static loc:Localizer.Instance}, Path=HideError}" Command="{Binding HideErrorCommand}" />
                    </ContextMenu>
                </Image.ContextMenu>
            </Image>
        </Grid>

    </Grid>
</Window>
